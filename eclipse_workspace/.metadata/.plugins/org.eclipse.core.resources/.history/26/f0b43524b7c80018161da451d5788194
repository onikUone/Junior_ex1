package eclipse_ex1;

public class InterNeuron extends Neuron{
	//member field

	//member method

	public void reWeight(double x, double y, double o_fromInter, double o_fromOutput, OutputNeuron out, int inputNumber){
		double temp = 0.0;
		temp += (y - o_fromOutput) * o_fromOutput * (1 - o_fromOutput) * out.getWeight()[inputNumber];
		for(int i=0; i<weight.length; i++){
			delta_W[i] *= alpha;
			delta_W[i] += eta * o_fromInter * (1 - o_fromInter) * temp * x;
			weight[i] += delta_W[i];
		}
		delta_T *= alpha;
		delta_T += eta * o_fromInter * (1 - o_fromInter) * temp;
		threshoud += delta_T;
	}
	//constructor
	//引数に入力層の個数を指定すると、その個数だけの次元で結合強度配列を作成する。
	InterNeuron(int inputNumber) {
		super(inputNumber);
	}
}
